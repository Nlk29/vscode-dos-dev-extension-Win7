{
  "name": "dos-dev",
  "displayName": "dos-dev",
  "description": "Plug-and-play C/C++ DOS development in Visual Studio Code.",
  "version": "1.2.0",
  "repository": "https://github.com/badlogic/vscode-dos-dev-extension",
  "publisher": "badlogicgames",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dosdev.installTools",
    "onCommand:dosdev.initProject"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "category": "DOS",
        "command": "dosdev.installTools",
        "title": "Install tools"
      },
      {
        "category": "DOS",
        "command": "dosdev.initProject",
        "title": "Init project"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.4",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.16.12",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "extensionDependencies": [
    "mindaro-dev.file-downloader",
    "ms-vscode.cpptools-extension-pack",
    "llvm-vs-code-extensions.vscode-clangd",
    "webfreak.debug"
  ],
  "dependencies": {
    "@microsoft/vscode-file-downloader-api": "^1.0.1",
    "@shockpkg/archive-files": "^2.1.2",
    "decompress": "^4.2.1",
    "fs-extra": "^11.1.0"
  }
}
